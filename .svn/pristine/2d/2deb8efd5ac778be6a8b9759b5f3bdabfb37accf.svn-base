<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets">
<h:head>

	<h:outputStylesheet library="css" name="colorbox.css" target="head" />
	<h:outputStylesheet library="css" name="custom.css" target="head" />
	<h:outputStylesheet library="css" name="fixes.css" target="head" />
	<h:outputStylesheet library="css" name="grid.css" target="head" />
	<h:outputStylesheet library="css" name="reset.css" target="head" />
	<h:outputStylesheet library="css" name="slickmap.css" target="head" />
	<h:outputStylesheet library="css" name="styles.css" target="head" />
	<h:outputStylesheet library="css" name="superfish.css" target="head" />
	<h:outputStylesheet library="css" name="tipTip.css" target="head" />

</h:head>
<div id="slideshow"></div>
<div id="header">

	<div class="container_12">

		<h:form>

			<div class="grid_13">

				<h:link title="BookDepot" fragment="home.xhtml">
					<div class="grid_2 alpha">
						<h:graphicImage width="140" name="./images/logo.png" alt="image"
							style="margin-top:19px;" />
					</div>
				</h:link>
				<ul class="menu sf-menu">
					<li><h:commandLink action="#{navBean.toHome}"
							value="#{msgs.homeMenu}" /> </li>
					<li><a disabled="true">#{msgs.genreMenu}</a>
						<ul>
							<ui:repeat value="#{genreAction.allGenres}" var="genre_list">
								<li><h:commandLink value="#{genre_list.genre}"
										action="#{searchAction.searchAction}">
										<f:param name="genre_id" value="#{genre_list.id}" />
									</h:commandLink></li>
							</ui:repeat>



						</ul></li>
						<li><h:commandLink value="#{msgs.helpMenu}" action="#{navBean.toHelp}"/></li>
					<li><h:commandLink action="#{navBean.toManagement}"
							rendered="#{userBean.manager == true}">Manage</h:commandLink>
						<ul>
							<li><h:commandLink action="#{navBean.toInventory}"
									value="Inventory Management" /></li>
							<li><h:commandLink action="#{navBean.toSale}"
									value="Set Sales Management" /></li>
							<li><h:commandLink action="#{navBean.toUser}"
									value="Users Management" /></li>
							<li><h:commandLink action="#{navBean.toOrder}"
									value="Order Management" /></li>
							<li><h:commandLink action="#{navBean.toReview}"
									value="Review Management" /></li>
							<li><h:commandLink action="#{navBean.toNews}"
									value="News Feed Management" /></li>
							<li><h:commandLink action="#{navBean.toSurvey}"
									value="Survey Management" /></li>
							<li><h:commandLink action="#{navBean.toBanner}"
									value="Banner Management" /></li>
							<li><h:commandLink action="#{navBean.toReports}"
									value="Reports" /></li>
						</ul></li>
					<li><h:commandLink action="#{navBean.toCheckout}">#{msgs.shoppingCartMenu}</h:commandLink></li>

					<li class="login-menu"><h:panelGroup id="newsletter-form"
							rendered="#{userBean.loggedin == false}">
							<center>
								<h:inputText class="login" id="user-login" label="user-login"
									value="#{userBean.login}" />
								<br />
								<h:inputSecret class="login" id="password" label="password"
									value="#{userBean.password}" />
								<br />
							</center>
							<center>
								<!-- LOGIN BUTTON -->
								<h:commandButton class="management_list btn-style1 rounded"
									value="Log in" action="#{userLoginAction.authenticate}"
									outcome="authenticated"></h:commandButton>
								<!-- REGISTRATION BUTTON -->
								<h:commandButton class="management_list btn-style1 rounded"
									value="#{msgs.registrationMenu}"
									action="#{navBean.toRegistration}"
									rendered="#{userBean.loggedin == false}"></h:commandButton>
							</center>
						</h:panelGroup> <h:panelGrid rendered="#{userBean.loggedin == true}">
							<br />

							<h:panelGrid columns="2">
								<h:outputText value="Logged in as" style="color:white;" />
								<h:outputText value="#{userBean.login}"
									style="color:white;text-transform:uppercase;margin-left:5px;" />
								<h:commandLink action="#{navBean.toProfile}"
									value="Edit Profile" style="color:white;">
									<f:param name="_id" value="50" />
								</h:commandLink>
								<h:commandLink action="#{userLoginAction.logout}" value="Logout"
									style="color:white;" />
							</h:panelGrid>
						</h:panelGrid></li>
				</ul>
			</div>

		</h:form>
		<div class="clear"></div>
		<div class="shadow-down"></div>
	</div>
</div>


</html>