						<br />
						<h:commandButton class="management_list btn-style1 rounded"
							onclick="showForm('sales_by_author')" value="Sales by Author" />
						<br />
						<h:commandButton class="management_list btn-style1 rounded"
							onclick="showForm('sales_by_publisher')"
