						<br />
						<h:commandButton class="management_list btn-style1 rounded"
							onclick="showForm('top_sellers')" value="Top Sellers" />
						<br />
						<h:commandButton class="management_list btn-style1 rounded"
							onclick="showForm('top_clients')" value="Top Clients" />
						<br />
						<h:commandButton class="management_list btn-style1 rounded"
							onclick="showForm('zero_sales')" value="Zero Sales" />
						<br />
